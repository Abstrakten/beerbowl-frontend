<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/colorPrimaryDark"
    android:padding="5dp">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/new_match"
        android:id="@+id/submitMatchButton"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/submitMatchButton"
        android:text="@string/leagueRating"
        android:gravity="center_vertical"
        android:id="@+id/leagueRating"/>
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:text="@string/leagueName"
        android:gravity="center_vertical"
        android:id="@+id/leagueName"
        android:layout_toLeftOf="@id/leagueRating"/>

</RelativeLayout>